<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    tools:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/transparente"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imagen_tarea"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tarea1"></ImageView>

        <TextView
            android:id="@+id/nombre_hijo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagen_tarea"
            android:layout_toRightOf="@id/imagen_tarea"
            android:text="NOMBRE TAREA"
            android:textColor="#0019FF"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/descripcion_premio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombre_hijo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagen_tarea"
            android:layout_toRightOf="@+id/imagen_tarea"
            android:text="descripcion de la tarea bla bla"
            android:textColor="#0019FF"></TextView>

        <TextView
            android:id="@+id/precio_premio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descripcion_premio"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imagen_tarea"
            android:layout_toRightOf="@+id/imagen_tarea"
            android:text="precio bla bla"
            android:textColor="#0019FF"></TextView>

        <TextView
            android:id="@+id/comprar_tarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descripcion_premio"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="33dp"
            android:layout_toEndOf="@id/imagen_tarea"
            android:layout_toRightOf="@id/imagen_tarea"
            android:background="#FF0000"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="@string/tarea_realizada_lista"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>